
 config system global
    set admin-https-redirect disable
    set admin-sport 8443
    set alias "SSL VPN interface"
    set snmp-index 2
    next
config system interface
    edit "SecureHub"
        set vdom "root"
        set ip 10.10.1.1 255.255.255.255
        set type tunnel
        set remote-ip 10.10.1.2 255.255.255.0
        set snmp-index 3
        set interface "port1"
    next
end
config vpn ssl settings
    set servercert "self-sign"
    set tunnel-ip-pools "SSLVPN_TUNNEL_ADDR1"
    set tunnel-ipv6-pools "SSLVPN_TUNNEL_IPv6_ADDR1"
    set port 443
    set source-interface "port1"
    set source-address "all"
    set source-address6 "all"
    set default-portal "tunnel-access"
    config authentication-rule
        edit 1
            set groups "Guest-group"
            set portal "tunnel-access"
       next
    end
end
config vpn ipsec phase1-interface
    edit "SecureHub"
        set type dynamic
        set interface "port1"
        set peertype any
        set net-device disable
        set proposal aes128-sha256 aes256-sha256 aes128-sha1 aes256-sha1
        set add-route disable
        set dpd on-idle
        set wizard-type hub-fortigate-auto-discovery
        set auto-discovery-sender enable
        set tunnel-search nexthop
        set psksecret ${psk_key}
    next
end
config vpn ipsec phase2-interface
    edit "SecureHub"
        set phase1name "SecureHub"
        set proposal aes128-sha1 aes256-sha1 aes128-sha256 aes256-sha256 aes128gcm aes256gcm chacha20poly1305
    next
end
config firewall policy
    edit 1
        set name "vpn_SecureHub_spoke2hub"
        set srcintf "SecureHub"
        set dstintf "port1"
        set srcaddr "all"
        set dstaddr "SecureHub_local"
        set action accept
        set schedule "always"
        set service "ALL"
    next
    edit 2
        set name "vpn_SecureHub_spoke2spoke"
        set srcintf "SecureHub"
        set dstintf "SecureHub"
        set srcaddr "all"
        set dstaddr "all"
        set action accept
        set schedule "always"
        set service "ALL"
    next
    edit 3
        set name "SSLVPN-SecureSpoke"
        set srcintf "ssl.root"
        set dstintf "SecureHub"
        set srcaddr "all"
        set dstaddr "RemoteSubnet"
        set action accept
        set schedule "always"
        set service "ALL"
        set groups "Guest-group"
        set nat enable
    next
end
config router bgp
    set as 65400
    config neighbor
        edit "10.10.1.3"
            set advertisement-interval 1
            set link-down-failover enable
            set remote-as 65400
            set route-reflector-client enable
    next
end
    config network
        edit 1
            set prefix 10.0.2.0 255.255.255.0
    next
end